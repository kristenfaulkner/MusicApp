<h1>Upload a new Track!</h1>
<form method="post" action="/albums/<%= @album.id %>">
  <% if @album.persisted? %>
    <input name="_method" type="hidden" value="patch">
  <% end %>
  
  <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>

  Track Title:
      <input type="text" name="track[name]" 
      placeholder="name" value = <%= @track.name %>>
      <br>
  Album: 
      <select name="track[album_id]" value = <%= @album.id %>>
        <%= @band.albums.each do |album| %>>
        <option value="<%= @album.id %>"><%= @album.name %></option>
      </select><br>
      <br>
  Type:
      <input type="radio" name="album[type]" value="regular">Regular
      <input type="radio" name="album[type]" value="bonus">Bonus<br>
      <br>
</form>
<br>
<%=link_to "<< back to Albums", albums_url%>